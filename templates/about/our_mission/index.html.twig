{% extends 'about/about.html.twig' %}

{% block title %}OurHistory index{% endblock %}

{% block tab_content %}
    {% for our_mission in our_missions %}
        <div class="row py-5">
            <div class="col-md-12">
                <img class="img-fluid mx-auto d-block" style="height: 450px" src="{{ vich_uploader_asset(our_mission, 'missionImageFile') }}" alt="{{ our_mission.title }}">
            </div>
        </div>

        <div class="container mx-5">
            <div class="row">
                <div class="col-md-12">
                    <h2>{{ our_mission.title }}</h2>
                </div>
                <p>{{ our_mission.text | raw }}</p>
            </div>
        </div>
    {% endfor %}
{% endblock %}
