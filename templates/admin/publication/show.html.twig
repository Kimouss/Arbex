{% extends 'admin/base.html.twig' %}

{% block title %}Publication{% endblock %}

{% block page_title %}Publication{% endblock %}
{% block page_subtitle %}Show{% endblock %}

{% block page_content %}
    <div class="box box-default">
        <div class="box-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>{{ 'arbex.publication.title' | trans }}</th>
                    <td>{{ publication.title }}</td>

                </tr>
                <tr>
                    <th>{{ 'arbex.publication.description' | trans }}</th>
                    <td>{{ publication.description }}</td>

                </tr>
                <tr>
                    <th>{{ 'arbex.publication.url' | trans }}</th>
                    <td>{{ publication.url }}</td>

                </tr>
                <tr>
                    <th>{{ 'arbex.publication.created_at' | trans }}</th>
                    <td>{{ publication.createdAt | date('d-m-Y') }}</td>

                </tr>
                <tr>
                    <th>{{ 'arbex.publication.updated_at' | trans }}</th>
                    <td>{{ publication.updatedAt | date('d-m-Y') }}</td>

                </tr>
                <tr>
                    <th>{{ 'arbex.publication.user' | trans }}</th>
                    <td>
                        <a href="{{ path('admin_user_user_show', {'id': publication.user.id }) }}">{{ publication.user.email }}</a>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>

        <div class="box-footer">
            <div class="row">
                <div class="col-md-3">
                    <a href="{{ path('admin_publication_index') }}" class="btn btn-default">back to list</a>
                    <a href="{{ path('admin_publication_edit', {'id': publication.id}) }}" class="btn btn-warning">edit</a>
                </div>

                {% if is_granted('ROLE_ADMIN_ARBEX') or app.user.id != publication.user.id %}
                    <div class="col-md-2 pull-right">
                        {{ include('admin/publication/_delete_form.html.twig') }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
