{% extends 'admin/base.html.twig' %}

{% block title %}New Publication{% endblock %}

{% block page_title %}Publication{% endblock %}
{% block page_subtitle %}New{% endblock %}

{% block page_content %}
    <div class="box box-default">
        <div class="box-body">
            {{ include('admin/publication/_form.html.twig', {'button_label': 'New'}) }}
        </div>

        <div class="box-footer">

            <div class="row">
                <div class="col-md-3">
                    <a href="{{ path('admin_publication_index') }}" class="btn btn-default">back to list</a>
                </div>

                {% if is_granted('ROLE_ADMIN_ARBEX') or app.user.id != user.id %}
                    <div class="col-md-2 pull-right">
                        {{ include('admin/publication/_delete_form.html.twig') }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
