<div class="box-body">
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">
                {{ knp_pagination_sortable(pagination, 'arbex.role.name' | trans, 'role.name') }}
                <i class="fas fa-{{ sortDirectionIcon('role.name', pagination.params) }}"></i>
            </th>
            <th scope="col" class="text-center">
                {{ knp_pagination_sortable(pagination, 'arbex.role.position' | trans, 'role.position') }}
                <i class="fas fa-{{ sortDirectionIcon('role.position', pagination.params) }}"></i>
            </th>
            <th scope="col" class="text-center">
                {{ knp_pagination_sortable(pagination, 'arbex.role.created_at' | trans, 'role.created_at') }}
                <i class="fas fa-{{ sortDirectionIcon('role.created_at', pagination.params) }}"></i>
            </th>
            <th scope="col" class="text-center">
                {{ knp_pagination_sortable(pagination, 'arbex.role.updated_at' | trans, 'role.updated_at') }}
                <i class="fas fa-{{ sortDirectionIcon('role.updated_at', pagination.params) }}"></i>
            </th>
            <th scope="col" class="text-center">
                Action
            </th>
        </tr>
        </thead>
        <tbody>
        {% for role in pagination %}
            <tr>
                <th scope="row">{{ role.name }}</th>
                <td class="text-center">{{ role.position }}</td>
                <td class="text-center">{{ role.createdAt | date('d-m-Y') }}</td>
                <td class="text-center">{{ role.updatedAt | date('d-m-Y') }}</td>
                <td class="text-center">
                    <div class="btn-group">
                        <a href="{{ path('admin_team_role_show', {id: role.id}) }}" class="btn-sm btn-success">
                            <i class="fas fa-eye"></i>
                        </a>
                    </div>
                    <div class="btn-group">
                        <a href="{{ path('admin_team_role_edit', {id: role.id}) }}" class="btn-sm btn-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_team_role_new') }}" class="btn btn-primary">New</a>

    <div class="navigation">
        <div class="pull-right">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
</div>
