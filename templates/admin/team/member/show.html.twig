{% extends 'admin/base.html.twig' %}

{% block title %}Team Member{% endblock %}

{% block page_title %}Team Member{% endblock %}
{% block page_subtitle %}Show{% endblock %}

{% block page_content %}
    <div class="box box-default">
        <div class="box-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>{{ 'arbex.history.image' | trans }}</th>
                    <td>
                        {% if member.imageFile is not empty or member.imageFile is null %}
                            <img src="{{ asset('build/images/empty.png') }}" alt="empty" style="height: 200px">
                        {% else %}
                            <img src="{{ vich_uploader_asset(member, 'imageFile') }}" style="height: 200px" alt="{{ member.imageFile }}" />
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>{{ 'arbex.member.full_name' | trans }}</th>
                    <td>{{ member.fullName }}</td>
                </tr>
                <tr>
                    <th>{{ 'arbex.member.hierarchy' | trans }}</th>
                    <td>{{ member.hierarchy.name }}</td>
                </tr>
                <tr>
                    <th>{{ 'arbex.member.job' | trans }}</th>
                    <td>{{ member.job }}</td>
                </tr>
                <tr>
                    <th>{{ 'arbex.member.domain' | trans }}</th>
                    <td>{{ member.domain }}</td>
                </tr>
                <tr>
                    <th>{{ 'arbex.member.school' | trans }}</th>
                    <td>{{ member.school }}</td>
                </tr>
                <tr>
                    <th>{{ 'arbex.publication.created_at' | trans }}</th>
                    <td>{{ member.createdAt | date('d-m-Y') }}</td>
                </tr>
                <tr>
                    <th>{{ 'arbex.publication.updated_at' | trans }}</th>
                    <td>{{ member.updatedAt | date('d-m-Y') }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <div class="box-footer">
            <div class="row">
                <div class="col-md-3">
                    <a href="{{ path('admin_team_member_index') }}" class="btn btn-default">back to list</a>
                    <a href="{{ path('admin_team_member_edit', {'id': member.id}) }}" class="btn btn-warning">edit</a>
                </div>

                {% if is_granted('ROLE_ADMIN_ARBEX') %}
                    <div class="col-md-2 pull-right">
                        {{ include('admin/team/member/_delete_form.html.twig') }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
