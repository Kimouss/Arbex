{% extends 'admin/base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block page_title %}Tag{% endblock %}
{% block page_subtitle %}Show{% endblock %}

{% block page_content %}
    <div class="box box-default">
        <div class="box-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>{{ 'arbex.tag.title' | trans }}</th>
                    <td>{{ tag.title }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <div class="box-footer">
            <div class="row">
                <div class="col-md-3">
                    <a href="{{ path('admin_tag_index') }}" class="btn btn-default">back to list</a>
                    <a href="{{ path('admin_tag_edit', {'id': tag.id}) }}" class="btn btn-warning">edit</a>
                </div>

                {% if is_granted('ROLE_ADMIN_ARBEX') %}
                    <div class="col-md-2 pull-right">
                        {{ include('admin/tag/_delete_form.html.twig') }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
